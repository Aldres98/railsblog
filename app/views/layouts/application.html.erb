<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= nav_bar brand: "Rails blog", brand_link: articles_path do %>
        <% menu_group do %>
            <%= menu_item "Articles", articles_path %>
            <%= menu_item "Contact us", contacts_path %>
            <%= menu_item "New article", new_article_path %>
        <% end %>
    <% end %>
    <a href="/users/sign_out" data-method="delete">Sign out | </a>
    <a href="/users/sign_in">Sign in</a>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

            <div>
                  <%if @error && @error.length > 0 then %>
                      <div class="alert alert-danger"><%=@error%></div>
                  <% end %>
                  <%= yield %>
            </div>
  </body>
</html>
