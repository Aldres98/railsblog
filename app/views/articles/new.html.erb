

    <h1> New Article </h1>

<%= bootstrap_form_for :article, url: articles_path do |f| %>

    <% if @article && @article.errors.any? %>

    <p>
        <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
        </ul>
    </p>
    <% end %>



    <p>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.text_area :text %>

    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>