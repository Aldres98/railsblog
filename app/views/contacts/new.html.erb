    <h1> Contact us </h1>

    <%= bootstrap_form_for :contact, url: contacts_path do |f| %>

    <% if @contact && @contact.errors.any? %>

    <p>
        <ul>
        <% @contact.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
        </ul>
    </p>
    <% end %>

    <p>
        <%= f.text_field :email %>
    </p>

    <p>
        <%= f.text_area :message %>

    </p>

    <p>
        <%= f.submit 'Send message' %>
    </p>

<% end %>

